<div class="wrapper">

<%= form_for applications_path, method: :post do |f| %>
  <%#= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

 <!-- <div class="actions"> -->
    <div class="clearfix">
    <%= f.submit "Create Application" %>
  </div>
<% end %>
</div>
